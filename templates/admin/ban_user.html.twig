{% extends 'admin/base_admin.html.twig' %}

{% block title %}Забанить{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <h1>Забанить пользователя</h1>
                {{ form_start(form) }}
                {{ form_row(form.banned) }}
                {{ form_row(form.bannedReason) }}
                <button type="submit" class="btn btn-danger">Сохранить</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
{% set no_fixed=true %}
{% set no_search=true %}
{% block footer %}{% endblock %}