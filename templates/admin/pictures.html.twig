{% extends '/admin/base_admin.html.twig' %}

{% block title %}Обзор{% endblock %}

{% block body %}
    <section class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <h1 class="h3 mb-3 font-weight-normal">Список файлов</h1>
            </div>
            <div class="col-lg-10">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th scope="col">Имя</th>
                        <th scope="col">Размер</th>
                        <th scope="col">Создано</th>
                    </tr>
                    </thead>
                    {% for file in  fileList|sort((a, b) => b.created <=> a.created) %}
                        <tr>
                            <td>{{ file.filename }}</td>
                            <td>{{ file.size|shortBite }}</td>
                            <td>{{ file.created|date("H:i:s d-m-y") }}</td>
                            <td>

                                    <img class="rounded"
                                         src="{{ file.filename | imagine_filter('admin_picture_preview') }}" alt="{{ file.filename }}">

                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">Файлов не найдено</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </section>
{% endblock %}
{% set no_fixed=true %}
{% set no_search=true %}
{% block footer %}{% endblock %}
