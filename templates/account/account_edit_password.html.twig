{% extends 'base.html.twig' %}

{% block title %}Изменить пароль{% endblock %}

{% block body %}

    {% if flash %}
<div class="container">
    {% else %}
    <div class="container first-section">
        {% endif %}
        <div class="row justify-content-center">
            <div class="col-md-4">
                {{ form_start(userForm) }}
                <h1 class="h3 mb-3 font-weight-normal">Изменение пароля</h1>
                    {{ form_row(userForm.oldPassword) }}
                    {{ form_row(userForm.plainPassword) }}
                <button class="btn btn-lg btn-primary btn-block" type="submit">Изменить</button>
                {{ form_end(userForm) }}
            </div>
        </div>
    </div>
    {% endblock %}

    {% block footer %}
{% endblock %}